{
	"name": "easy-react-ui",
	"version": "0.2.0",
	"private": false,
	"description": "EasyUI - an easy-going React components library",
	"author": "Dennis Xiao",
	"license": "MIT",
	"keywords": [
		"Component",
		"UI",
		"React"
	],
	"homepage": "https://github.com/dennisXZX/easyUI",
	"repository": {
		"type": "git",
		"url": "https://github.com/dennisXZX/easyUI.git"
	},
	"files": [
		"dist"
	],
	"main": "build/index.js",
	"module": "build/index.js",
	"types": "build/index.d.ts",
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.28",
		"@fortawesome/free-solid-svg-icons": "^5.13.0",
		"@fortawesome/react-fontawesome": "^0.1.9",
		"axios": "^0.21.0",
		"classnames": "^2.2.6",
		"react-transition-group": "^4.3.0"
	},
	"peerDependencies": {
		"react": ">=16.8.0",
		"react-dom": ">=16.8.0"
	},
	"scripts": {
		"build": "yarn clean && yarn build-ts && yarn build-css",
		"build-css": "node-sass ./src/styles/index.scss ./dist/index.css",
		"build-ts": "tsc -p tsconfig.build.json",
		"build-storybook": "build-storybook -s public",
		"clean": "rimraf ./dist",
		"eject": "react-scripts eject",
		"format": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
		"lint": "eslint --ext js,ts,tsx src --color --max-warnings 5",
		"start": "react-scripts start",
		"test": "react-scripts test",
		"test:ci": "cross-env CI=true react-scripts test",
		"storybook": "start-storybook -p 9009 -s public",
		"prepublishOnly": "yarn test:ci && yarn lint && yarn build"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@storybook/addon-actions": "^6.0.28",
		"@storybook/addon-links": "^6.0.28",
		"@storybook/addons": "^6.0.28",
		"@storybook/preset-create-react-app": "^3.1.5",
		"@storybook/react": "^6.0.28",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"@types/classnames": "^2.2.10",
		"@types/jest": "^24.0.0",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.0",
		"@types/react-dom": "^16.9.0",
		"@types/react-transition-group": "^4.2.4",
		"cross-env": "^7.0.2",
		"eslint-config-prettier": "^6.10.1",
		"eslint-config-react-app": "^5.2.1",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.3",
		"lint-staged": "^10.1.2",
		"node-sass": "^7.0.0",
		"prettier": "^2.0.4",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-scripts": "3.4.1",
		"rimraf": "^3.0.2",
		"typescript": "~3.7.2"
	}
}
